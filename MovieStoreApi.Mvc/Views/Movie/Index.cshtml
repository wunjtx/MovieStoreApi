@model IEnumerable<MovieStore.Entities.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Title
        </th>
        <th>
            Overview
        </th>
        <th>
            Tagline
        </th>

        <th>
            ImdbUrl
        </th>
        <th>
            TmdbUrl
        </th>
        <th>
            PosterUrl
        </th>
        <th>
            BackdropUrl
        </th>
        <th>
            OriginalLanguage
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Overview)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tagline)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ImdbUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TmdbUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PosterUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BackdropUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalLanguage)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
